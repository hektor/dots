# Keyboard controls for music player
"exec playerctl --player=ncspot next"
  m:0x40 + c:114
  Mod4 + Right
"exec playerctl --player=ncspot previous"
  m:0x40 + c:113
  Mod4 + Left
"exec playerctl --player=ncspot pause"
  m:0x40 + c:116
  Mod4 + Down
"exec playerctl --player=ncspot play"
  m:0x40 + c:111
  Mod4 + Up

# Headphone controls for music player
"exec playerctl --player=ncspot next"
  m:0x0 + c:171
  XF86AudioNext
"exec playerctl --player=ncspot previous"
  m:0x0 + c:173
  XF86AudioPrev
"exec playerctl --player=ncspot pause"
  m:0x0 + c:209
  XF86AudioPause
"exec playerctl --player=ncspot play"
  m:0x0 + c:208
  XF86AudioPlay

# Wacom mappings
"xdotool key Super_L+j"
  m:0x00 + b:13
"xdotool key space"
  m:0x00 + b:12
